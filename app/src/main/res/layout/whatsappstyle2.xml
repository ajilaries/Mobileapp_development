<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- PROFILE PIC -->
    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/profile"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_bg"
        android:clipToOutline="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- USER NAME -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aju"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/profilePic"
        app:layout_constraintTop_toTopOf="@id/profilePic"
        android:layout_marginStart="16dp"/>

    <!-- ONLINE STATUS -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online now"
        android:textSize="14sp"
        android:textColor="#777"
        app:layout_constraintStart_toStartOf="@id/userName"
        app:layout_constraintTop_toBottomOf="@id/userName"
        android:layout_marginTop="4dp"/>

    <!-- CHAT BUTTON -->
    <androidx.cardview.widget.CardView
        android:id="@+id/chatCard"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/callCard"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_chat"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <TextView
                android:text="Chat"
                android:textSize="16sp"
                android:layout_marginTop="6dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CALL BUTTON -->
    <androidx.cardview.widget.CardView
        android:id="@+id/callCard"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/profilePic"
        app:layout_constraintStart_toEndOf="@id/chatCard"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_call"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <TextView
                android:text="Calls"
                android:textSize="16sp"
                android:layout_marginTop="6dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- LOWER OPTIONS (STATUS / CAMERA / SETTINGS) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/chatCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cameraCard">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_launcher_background"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <TextView
                android:text="Status"
                android:textSize="16sp"
                android:layout_marginTop="6dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CAMERA CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cameraCard"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/chatCard"
        app:layout_constraintStart_toEndOf="@id/statusCard"
        app:layout_constraintEnd_toStartOf="@id/settingsCard">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_launcher_background"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <TextView
                android:text="Camera"
                android:textSize="16sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- SETTINGS -->
    <androidx.cardview.widget.CardView
        android:id="@+id/settingsCard"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/chatCard"
        app:layout_constraintStart_toEndOf="@id/cameraCard"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_launcher_background"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <TextView
                android:text="Settings"
                android:textSize="16sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
